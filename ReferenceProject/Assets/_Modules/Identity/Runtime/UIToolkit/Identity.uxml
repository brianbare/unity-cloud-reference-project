<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:appui="Unity.AppUI.UI">
    <ui:VisualElement class="appui appui--dark" style="background-color: rgba(0, 0, 0, 0);">
        <ui:VisualElement class="right-content">
            <appui:Heading text="@Identity:Welcome" size="L" class="welcome-text-section"/>
            <ui:VisualElement class="login-button-section">
                <appui:Button name="login-button" title="@Identity:Login" primary="true" class="login-button" />
                <ui:VisualElement name="loading-indicator" class="loading-indicator">
                    <appui:CircularProgress/>
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
